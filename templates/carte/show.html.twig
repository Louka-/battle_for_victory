{% extends 'base.html.twig' %}

{% block title %}Carte
{% endblock %}

{% block body %}

	<div class="container mt-5">

		<div class="row">
			<div class="col-12 d-flex justify-content-center mt-5">

				<figure class="position-absolute">
					<img src="{{asset('images/carte.png')}}" alt="" class="carte">
				</figure>

				<div class="col-4-lg col-6-sm position-absolute">
					<div class="text-center nomCarte d-flex align-items-end justify-content-center">
						<div class="titreCarte">{{ carte.name }}</div>
					</div>

					<div class="photo d-flex align-items-center justify-content-center">
							<img src="{{asset('images/images/'~carte.image)}}" alt="">
					</div>

					<div class="d-flex justify-content-center">
						<div class="orRessource row d-flex justify-content-center justify-self-center">
							<div class="or d-flex justify-content-center align-items-center">{{ carte.gold }}</div>
							<div class="or d-flex justify-content-center align-items-center">
								<div class="position-absolute d-flex align-self-start coutRessource pt-1">{{ carte.bonus }}</div>				
								<img src="{{asset('images/style/'~carte.style)}}" alt="">
							</div>
							
						</div>
					</div>

					<div class="row d-flex justify-content-center mt-2">
						<div>
							<figure class="d-flex justify-content-center ressource1">
								<img src="{{asset('images/ressource_cost/'~carte.ressource)}}" alt="">
								<div class="position-absolute d-flex align-items-center coutRessource">{{ carte.cost }}</div>
							</figure>
						</div>

                                <div>
                                    <figure class="d-flex justify-content-center ressource1">
                                        <img src="{{asset('images/ressource_cost/'~carte.ressource2)}}" alt="">
                                        <div class="position-absolute d-flex align-items-center coutRessource">{{ carte.cost2 }}</div>
                                    </figure>
                                </div>



                                <div>
                                    <figure class="d-flex justify-content-center ressource1">
                                        <img src="{{asset('images/ressource_cost/'~carte.ressource3)}}" alt="">
                                        <div class="position-absolute d-flex align-items-center coutRessource">{{ carte.cost3 }}</div>
                                    </figure>
                                </div>

					</div>
				</div>
			</div>

			<div class="container">
				<div class="row hauteur" style="height:720px;">
					<div class="col-12 d-flex justify-content-center align-items-end">
						<div class="col-6 d-flex justify-content-around">
							<a class="btn btn-info rounded-pill" href="{{ path('carte_index') }}">Retour</a>
							{% if is_granted('ROLE_USER') %}
							<a class="btn btn-success rounded-pill" href="{{ path('carte_edit', {'id': carte.id}) }}">Editer</a>
							{{ include('carte/_delete_form.html.twig') }}
							{% else %}
    						{% endif %}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
