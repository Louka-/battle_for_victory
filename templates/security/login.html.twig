{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}


{% block body %}

	<div class="container">
		<div class="row justify-content-center">
			<div class="col-12">
				
				
				<figure class="d-flex justify-content-center">
					<img src="{{asset('images/logo.png')}}" alt="" class="position-absolute titre mt-5">
            	</figure>

                <div class="col-12 d-flex align-items-end justify-content-center text-center" style="height:700px;">
                    <form method="post">

                        <label for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                        <label for="inputPassword">Password</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                        <input type="hidden" name="_csrf_token"
                            value="{{ csrf_token('authenticate') }}"
                        >


                        <div class="d-flex justify-content-center pt-3">
                            <button class="btn btn-success rounded-pill" type="submit">
                                Se connecter
                            </button>
                        </div>
                        <div class="pt-3">
                            <a href="{{ path('app_register') }}" class="btn btn-info rounded-pill">Inscription</a>
                        </div>
                    </form>


                
                </div>





			</div>
		</div>
	</div>
{% endblock %}
