{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-12">
				
				
				<figure class="d-flex justify-content-center">
					<img src="{{asset('images/logo.png')}}" alt="" class="position-absolute titre mt-5">
            	</figure>

                <div class="col-12 d-flex align-items-end justify-content-center text-center" style="height:700px;">
                    {{ form_start(registrationForm) }}
                        {{ form_row(registrationForm.email) }}
                        {{ form_row(registrationForm.plainPassword, {
                            label: 'Password'
                        }) }}

                        <div class="d-flex justify-content-center pt-3">
                            <button class="btn btn-success rounded-pill" type="submit">
                                Inscription
                            </button>
                        </div>
                    {{ form_end(registrationForm) }}
                </div>
			</div>
		</div>
	</div>
{% endblock %}
